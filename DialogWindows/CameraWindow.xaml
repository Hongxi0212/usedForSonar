<Window x:Class="AutoScanFQCTest.DialogWindows.CameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoScanFQCTest.DialogWindows"
        mc:Ignorable="d"
        Title="CameraWindow" Height="450" Width="800">
	
	<Grid x:Name="grid_MotherContainer" >
		<Grid.RowDefinitions>
			<RowDefinition Height="50*" />
			<!--<RowDefinition Height="3" />
					<RowDefinition Height="50*" />-->
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" x:Name="grid_ImageCanvas" Width="Auto" Margin="0,0,0,0">
			<Image x:Name="ctrl_ImageCanvas" Stretch="Fill" x:FieldModifier="public"
			   MouseWheel="ctrl_ImageCanvas_MouseWheel"
			   MouseMove="ctrl_ImageCanvas_MouseMove"
			   MouseDown="ctrl_ImageCanvas_MouseDown"
			   MouseUp="ctrl_ImageCanvas_MouseUp"
			   />
		</Grid>
	</Grid>
</Window>
